<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="RadioBlueStyle" TargetType="{x:Type RadioButton}">
        <Style.Triggers>
            <Trigger Property="RadioButton.IsChecked" Value="True">
                <Setter Property="Foreground" Value="Blue" />
                <Setter Property="FontWeight" Value="Bold" />
            </Trigger>
            <Trigger Property="RadioButton.IsChecked" Value="False">
                <Setter Property="Foreground" Value="Black" />
                <Setter Property="FontWeight" Value="Normal" />
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="RadioRedStyle" TargetType="{x:Type RadioButton}">
        <Style.Triggers>
            <Trigger Property="RadioButton.IsChecked" Value="True">
                <Setter Property="Foreground" Value="Red" />
                <Setter Property="FontWeight" Value="Bold" />
            </Trigger>
            <Trigger Property="RadioButton.IsChecked" Value="False">
                <Setter Property="Foreground" Value="Black" />
                <Setter Property="FontWeight" Value="Normal" />
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="BorderStyle" TargetType="{x:Type Border}">
        <Setter Property="Padding" Value="4" />
        <Setter Property="BorderBrush" Value="Gray" />
        <Setter Property="BorderThickness" Value="0.5,0.5,0.5,0" />
    </Style>
    <LinearGradientBrush x:Key="GridRowBackground">
        <GradientBrush.GradientStops>
            <GradientStopCollection>
                <GradientStop Color="PowderBlue" Offset="1"/>
                <GradientStop Color="WhiteSmoke" Offset="5"/>
            </GradientStopCollection>
        </GradientBrush.GradientStops>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="Background1">
        <GradientBrush.GradientStops>
            <GradientStopCollection>
                <!--<GradientStop Color="LightSteelBlue"/>-->
                <GradientStop Color="CadetBlue"/>
            </GradientStopCollection>
        </GradientBrush.GradientStops>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="DataGridRowHeaderBG">
        <GradientBrush.GradientStops>
            <GradientStopCollection>
                <GradientStop Color="LightGray"/>
            </GradientStopCollection>
        </GradientBrush.GradientStops>
    </LinearGradientBrush>
</ResourceDictionary>