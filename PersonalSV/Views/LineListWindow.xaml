<Window x:Class="TLCovidTest.Views.LineListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Line List Window" Height="400" Width="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border BorderBrush="Black" BorderThickness="1,1,1,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBox BorderBrush="Transparent" Background="Transparent" Grid.RowSpan="2" Width="100"/>
                <Button x:Name="btnUp" Grid.Column="1" Content="^" Height="12" VerticalAlignment="Top" Click="btnUp_Click"/>
                <Button x:Name="btnDown" Grid.Column="1" Grid.Row="1" Content="^" Height="12" Click="btnDown_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
